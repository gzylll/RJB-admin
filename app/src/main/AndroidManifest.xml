<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="valderfields.rjb_admin">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.LoadActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.LoginActivity"/>
        <activity android:name=".view.MainActivity"/>
        <activity
            android:name=".view.UploadIMGActivity"
            android:parentActivityName=".view.MainActivity" />
        <!-- Image Selector Entry -->
        <activity
            android:name="me.nereo.multi_image_selector.MultiImageSelectorActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".view.SettingActivity"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.LookupUserActivity"
            android:parentActivityName=".view.MainActivity" />
        <activity android:name=".view.AdminActivity"
            android:parentActivityName=".view.MainActivity"/>
        <activity android:name=".view.MyInfoActivity"
            android:parentActivityName=".view.MainActivity"/>
    </application>

</manifest>